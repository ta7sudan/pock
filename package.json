{
  "name": "pock",
  "version": "1.0.3",
  "description": "A mock server",
  "main": "src/index.js",
  "types": "types/index.d.ts",
  "typings": "types/index.d.ts",
  "bin": {
    "pock": "./dist/bin/index.js"
  },
  "man": "./man/doc.1",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w",
    "prebuild": "rimraf dist types",
    "lint": "tslint -p tsconfig.json && eslint test",
    "format": "prettier --config .prettierrc.js --write {src,bin,test}/**/*.{js,ts}",
    "inspect": "jsinspect src bin",
    "test": "tsc --outDir test_cache && nyc ava -v",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "report": "nyc report --reporter=html",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ta7sudan/pock.git"
  },
  "keywords": [
    "pock",
    "mock",
    "server",
    "cli"
  ],
  "author": "ta7sudan",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/ta7sudan/pock/issues"
  },
  "homepage": "https://github.com/ta7sudan/pock#readme",
  "files": [
    "dist",
    "man",
    "docs",
    "types"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "ava": {
    "cache": true,
    "babel": false
  },
  "nyc": {
    "cache": true,
    "include": [
      "test_cache/**/*.js"
    ]
  },
  "devDependencies": {
    "@types/figlet": "^1.2.0",
    "@types/figures": "^3.0.1",
    "@types/got": "^9.6.7",
    "@types/js-yaml": "^3.12.1",
    "@types/node": "^12.7.2",
    "@types/semver": "^6.0.1",
    "@types/yargs": "^13.0.2",
    "ava": "^2.2.0",
    "codecov": "^3.5.0",
    "conventional-changelog-cli": "^2.0.23",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.3",
    "jsinspect": "^0.12.7",
    "lint-staged": "^9.2.1",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "chokidar": "^3.0.2",
    "fast-glob": "^3.0.4",
    "fastify": "^2.7.1",
    "fastify-cookie": "^3.1.0",
    "fastify-cors": "^2.1.3",
    "fastify-http-proxy": "^4.3.1",
    "fastify-static": "^2.5.0",
    "figlet": "^1.2.3",
    "figures": "^3.0.0",
    "got": "^9.6.0",
    "js-yaml": "^3.13.1",
    "semver": "^6.3.0",
    "tslib": "^1.10.0",
    "yargonaut": "^1.1.4",
    "yargs": "^13.3.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
